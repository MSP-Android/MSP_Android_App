<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/back"
    >

    <ImageView
        android:id="@+id/img_event"
        android:scaleType="fitXY"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:translationZ="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/about_home" />

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="170dp"
        app:backgroundTint="@null"
        app:cardBackgroundColor="#617C79"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:cardCornerRadius="30dp">
        <TextView
            android:paddingTop="50dp"
            android:id="@+id/event_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="MSP APP"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_discription_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="50dp"
            android:text="Asdasdasd asd as dasdasd ad asdsa"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>