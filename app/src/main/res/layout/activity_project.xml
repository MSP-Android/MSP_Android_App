<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    tools:context=".ui.project.ProjectActivity">

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">
        <ImageView
            android:id="@+id/back_project"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:textColor="#617C79"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01" />
    <TextView
        android:id="@+id/Projects_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="Projects"
        android:textColor="#617C79"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />
     </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/web_custom"
                app:backgroundTint="@null"
                android:text="MOBILE"
                android:textColor="@color/black" />

            <Button
                app:backgroundTint="@null"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="WEB"
                android:background="@drawable/web_custom"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"/>

            <Button
                app:backgroundTint="@null"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="MEDIA"
                android:background="@drawable/web_custom"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginLeft="30dp"/>

            <Button
                app:backgroundTint="@null"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="IT"
                android:background="@drawable/web_custom"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
    </HorizontalScrollView>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_margin="10dp"
      app:cardCornerRadius="25dp"
      app:cardBackgroundColor="@color/back"
      android:layout_height="match_parent">
      <ProgressBar
          android:id="@+id/progressBar_project"
          style="?android:attr/progressBarStyle"
          android:layout_width="wrap_content"
          android:layout_gravity="center"
          android:layout_height="wrap_content"
          android:translationZ="120dp"
          android:outlineSpotShadowColor="@color/white"
          android:indeterminateTint="@color/tabindicator_gray"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recproject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
  </androidx.cardview.widget.CardView>


</LinearLayout>