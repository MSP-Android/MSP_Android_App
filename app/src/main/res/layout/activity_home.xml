<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context=".ui.home.HomeAcivity">

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E7EDF6"
        tools:context=".MainActivity">


    <TextView
        android:id="@+id/Projects_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="Home Services"
        android:textColor="#617C79"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

     </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        android:background="@color/back"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back"
            android:src="@drawable/fullgraylogo">

        </ImageView>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="8dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F7F7F7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Crew"
                android:textColor="#88B5B0"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/btn_crew"
                android:src="@drawable/crew_home"
                android:layout_height="130dp"
                android:layout_width="160dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/imageradious"
                android:layout_marginRight="35dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardBackgroundColor="#F7F7F7"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Project"
                android:textColor="#88B5B0"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/btn_project"
                android:src="@drawable/project_home"
                android:layout_height="130dp"
                android:layout_width="160dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/imageradious"
                android:layout_marginRight="35dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F7F7F7"
            android:layout_marginLeft="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Event"
                android:textColor="#88B5B0"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btn_event"
                android:layout_height="130dp"
                android:layout_width="160dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/imageradious"
                android:src="@drawable/event_home" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F7F7F7"
            android:layout_marginLeft="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="About Us"
                android:textColor="#88B5B0"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/btn_about"
                android:src="@drawable/about_home"
                android:layout_height="130dp"
                android:layout_width="160dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/imageradious"
                android:layout_marginRight="35dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fabCradleMargin="20dp"
        app:fabCradleVerticalOffset="8dp"
        app:fabCradleRoundedCornerRadius="20dp"
        android:background="@color/back"
        android:backgroundTint="@color/back"
        android:layout_marginTop="75dp"
        android:gravity="bottom">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottm_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back"
            android:backgroundTint="@color/back"
            android:layout_marginEnd="16dp"
            app:menu="@menu/bottom_nav"/>
    </com.google.android.material.bottomappbar.BottomAppBar>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:src="@drawable/ic_home"
            app:layout_anchor="@id/bottom_app_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>