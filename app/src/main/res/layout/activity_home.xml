<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/web_custom"
    tools:context=".ui.home.HomeAcivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Projects_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Home Services"
            android:textColor="@color/back"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.01" />

    </LinearLayout>


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/web_custom"
            android:src="@drawable/fullgraylogo">

        </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="8dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F7F7F7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Crew"
                android:textColor="#88B5B0"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/btn_crew"
                android:src="@drawable/crew_home"
                android:layout_height="130dp"
                android:layout_width="160dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/imageradious"
                android:layout_marginRight="35dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardBackgroundColor="#F7F7F7"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Project"
                android:textColor="#88B5B0"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/btn_project"
                android:src="@drawable/project_home"
                android:layout_height="130dp"
                android:layout_width="160dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/imageradious"
                android:layout_marginRight="35dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F7F7F7"
            android:layout_marginLeft="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Event"
                android:textColor="#88B5B0"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btn_event"
                android:layout_height="130dp"
                android:layout_width="160dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/imageradious"
                android:src="@drawable/event_home" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F7F7F7"
            android:layout_marginLeft="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="About Us"
                android:textColor="#88B5B0"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/btn_about"
                android:src="@drawable/about_home"
                android:layout_height="130dp"
                android:layout_width="160dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/imageradious"
                android:layout_marginRight="35dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fabCradleMargin="20dp"
        app:fabCradleVerticalOffset="8dp"
        app:fabCradleRoundedCornerRadius="20dp"
        android:background="@color/back"
        android:backgroundTint="@color/back"
        android:layout_marginTop="75dp"
        android:gravity="bottom">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottm_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back"
            android:backgroundTint="@color/back"
            android:layout_marginEnd="16dp"
            app:menu="@menu/bottom_nav"/>
    </com.google.android.material.bottomappbar.BottomAppBar>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:background="#E48C2E"
            android:src="@drawable/ic_home"
            app:layout_anchor="@id/bottom_app_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>